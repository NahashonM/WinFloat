<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Button Base Style -->
    <Style x:Key="MenuButtonBase" TargetType="ButtonBase">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource TextColor02}"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Width" Value="28"/>
        <Setter Property="Height" Value="28"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Content" Value="No Outline"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ButtonBase">
                    <Border x:Name="mainBorder" 
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        Padding="{TemplateBinding Padding}"
                        BorderThickness="1"
                        CornerRadius="6">

                        <ContentPresenter x:Name="ContentPart" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                            <ContentPresenter.RenderTransform>
                                <RotateTransform Angle="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}"/>
                            </ContentPresenter.RenderTransform>
                        </ContentPresenter>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="mainBorder" Property="Background" Value="{StaticResource BgColor02}"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="mainBorder" Property="Background" Value="{StaticResource BgColor03}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Menu Button Style -->
    <Style x:Key="MenuButtonStyle" TargetType="Button" BasedOn="{StaticResource MenuButtonBase}"/>

    <!-- Toggle Menu Button Style -->
    <Style x:Key="ToggleMenuButtonStyle" TargetType="ToggleButton" BasedOn="{StaticResource MenuButtonBase}">
        <Style.Triggers>
            <Trigger Property="IsChecked" Value="True">
                <Setter Property="Background" Value="{StaticResource BgColor02}"/>
                <Setter Property="Foreground" Value="{StaticResource AccentColor01}"/>
                <Setter Property="BorderBrush" Value="{StaticResource AccentColor00}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    
    <!-- Basic Button Style -->
    <Style x:Key="BasicButtonStyle" TargetType="Button" BasedOn="{StaticResource MenuButtonBase}">
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Width" Value="Auto"/>
        <Setter Property="Height" Value="Auto"/>
    </Style>

    
    <!-- CheckBox Style -->
    <Style x:Key="CheckBoxStyle" TargetType="CheckBox">
        <Setter Property="Foreground" Value="{StaticResource TextColor02}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Margin" Value="0,8,0,0"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <!-- InputTextBox Style -->
    <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource BgColor00}"/>
        <Setter Property="Foreground" Value="{StaticResource TextColor02}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BgColor02}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="IsReadOnly" Value="True"/>
        <Setter Property="Cursor" Value="Arrow"/>
    </Style>


    <!-- Label Style -->
    <Style x:Key="LabelStyle" TargetType="Label">
        <Setter Property="Foreground" Value="{StaticResource TextColor02}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Margin" Value="0,0,0,4"/>
    </Style>

    <!-- Label Style -->
    <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextColor01}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="0,0,0,4"/>
    </Style>

</ResourceDictionary>